<nav aria-label="breadcrumb">
  <ol class="breadcrumb bg-white mb-0">
      <hr />
    <li class="breadcrumb-item active">Charities</a></li>
  </ol>
</nav>
<div class="card mx-5">

    {{#unless charities}}
    <div class="jumbotron">
        <p class="lead" style="text-align:center;">Oops! We are having trouble retreiving the data.</p>
        </div>
    {{/unless}}
    
{{#each charities}}
{{#if this.listImageURL}}
{{#if this.listAbstract}}
<div class="row">
    <div class="d-flex flex-fill m-5" style="width:35em;">
      <div class="card flex-fill shadow" >
        <a href="/charities/{{this.listID}}">
        <div class="card-body d-flex">
            
                <img class="rounded-circle groupImg" src="{{this.listImageURL}}" />
                <p class="align-self-center mx-5 groupText" >{{this.listName}}</p>   
            
        </div>
        </a>
      </div>
    </div>
  <div class="d-flex flex-fill m-5 ml-5" style="width:20em;">
    <div class="card flex-fill shadow">
        <div class="card-header">
            Abstract
        </div>
      <div class="card-body ">
        <p class="">{{this.listAbstract}}</p>
      </div>
    </div>
  </div>
</div>
{{/if}}
{{/if}}
{{/each}}