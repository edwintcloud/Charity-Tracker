<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-white mb-0">
        <hr />
        <li class="breadcrumb-item active">Charities</a></li>
    </ol>
</nav>
{{#unless charities}}
    <div class="jumbotron mb-5">
        <p class="lead" style="text-align:center;">Oops! We are having trouble retreiving the data.</p>
    </div>
{{/unless}}
<div class="charity-card">
    {{#each charities}}
        {{#if this.listImageURL}}
            {{#if this.listAbstract}}
                <div class="d-flex mx-5 my-5">
                    <div class="card flex-fill shadow-lg">
                        <a href="/charities/{{this.listID}}">
        <div class="card-body d-flex flex-row">
            <div class="d-flex flex-column justify-content-center">
                <img class="groupImg shadow-lg" src="{{this.listImageURL}}" />
                </div>
          <div class="d-flex flex-column align-items-center flex-fill" >
              <div class="w-75 mb-4 text-center h3">
                      <u>{{this.listName}}</u>
              </div>
            <div class="w-75 text-left">
                     {{this.listAbstract}}
            </div>
          </div>
        </div>
        </a>
                    </div>
                </div>
            {{/if}}
        {{/if}}
    {{/each}}
</div>