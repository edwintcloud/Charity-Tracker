<div class="card-body">
    <div class="d-flex flex-row flex-wrap mx-4">
        <div class="d-flex flex-fill col-lg-6 my-4">
            <div class="card flex-fill shadow">
                <table class="table m-0 charityTable">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col" style="width: 40%">Organization Name</th>
                            <th scope="col">Amount Given</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <div id="listCharities">
                            {{#each charities}}
                                <input type="hidden" charity-id="{{this._id}}" id="{{slice8 this._id}}">
                                <tr>
                                    <td style="width: 40%" id="{{slice8 this._id}}-name">{{this.name}}</td>
                                    <td style="width: 20%" id="{{slice8 this._id}}-amount">
                                        {{totalArray this.donations}}
                                    </td>
                                    <td>
                                        <button id="addDonation-{{slice8 this._id}}" charity-id="{{this._id}}" class="btn btn-outline-success" type="button" onclick="openDonationModal('{{slice8 this._id}}');">Donations</button>
                                        <button class="btn btn-danger float-right" type="button" onclick="deleteCharity('{{slice8 this._id}}');">Delete</button>
                                    </td>
                                </tr>
                            {{/each}}
                        </div>
                        <tr>
                            <td></td>
                            <td></td>
                            <td>

                            </td>
                        </tr>
                    </tbody>
                </table>
                <button class="btn btn-success float-right px-4" type="button" data-toggle="modal" data-target="#addCharityModal">Add</button>
            </div>
        </div>
        <div class="d-flex flex-fill col-lg-6 my-4">
            <div class="card flex-fill shadow">
                <div class="card-header">
                    Current Contributions Total
                </div>
                <div class="card-body d-flex align-self-center">
                    <p class="align-self-center text-success display-4" id="contributionsTotal">{{total charities}}</p>
                </div>
            </div>
        </div>
    </div>
</div>