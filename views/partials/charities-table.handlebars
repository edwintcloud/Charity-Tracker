<div class="row flexrow">
  <div class="col-sm-6 flexcol">
    <div class="card cardLeft flexcont">
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th scope="col">Charity Name</th>
              <th scope="col">Amount Given</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
              <div id="listCharities">
                  {{#each charities}}
                  <input type="hidden" charity-id="{{this._id}}" id="{{slice8 this._id}}">
                  <tr>
                    <td id="{{slice8 this._id}}-name">{{this.name}}</td>
                    <td>
                    <form onsubmit="event.preventDefault();updateCharity('{{slice8 this._id}}');">
                      <div class="input-group">
                      <input type="number" id="{{slice8 this._id}}-amount" min="0.01" step="0.01" class="form-control" placeholder="Amount" value="{{this.amount}}">
                      <div class="input-group-append">
                      <button class="btn btn-outline-success" type="submit">Update</button>
                      </div>
                      </div>
                  </form>
                  </td>
                  <td>
                      <button class="btn btn-danger" type="button" onclick="deleteCharity('{{slice8 this._id}}');">Delete</button>
                  </td>
                  </tr>
                  {{/each}}
              </div>
            <tr>
              <td></td>
              <td></td>
              <td>
                <button class="btn btn-success float-right" type="button" data-toggle="modal" data-target="#addCharityModal">Add</button>
            </td>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
  <div class="col-sm-6 flexcol">
    <div class="card cardRight flexcont">
        <div class="card-header">
            Current Contributions Total
        </div>
      <div class="card-body flextext">
        <p class="card-text">{{total charities}}</p>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="addCharityModal" tabindex="-1" role="dialog" aria-labelledby="addCharityModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addCharityModalLabel">Add Charity</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="addCharityForm" onsubmit="event.preventDefault();addCharity();">
          <div class="form-group">
            <input type="text" class="form-control" id="addCharityName" name="name" placeholder="Name" required>
          </div>
          <div class="form-group">
            <input type="number" min="0.01" step="0.01" class="form-control" id="addCharityAmount" name="amount" placeholder="Amount" required>
          </div>
        <div id="addCharityInfo" class="alert alert-danger" role="alert" style="display: none;"></div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-success">Add</button>
      </div>
      </form>
    </div>
  </div>
</div>