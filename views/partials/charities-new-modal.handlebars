<!-- ADD CHARITY MODAL BEGIN -->
<div class="modal fade" id="addCharityModal" tabindex="-1" role="dialog" aria-labelledby="addCharityModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCharityModalLabel">Add Charity</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
            </div>
            <div class="modal-body">
                <form id="addCharityForm" onsubmit="event.preventDefault();addCharity();">
                    <div class="form-group">
                        <input type="text" class="form-control" id="addCharityName" name="name" placeholder="Name" required>
          </div>
                        <div class="form-group">
                            <input type="number" min="0.01" step="0.01" class="form-control" id="addCharityAmount" name="amount" placeholder="Initial Donation" required>
          </div>
                            <div id="addCharityInfo" class="alert alert-danger" style="display:none;" role="alert"></div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-success px-4">Add</button>
                        </div>
                </form>
            </div>
        </div>
    </div>
    <!-- ADD CHARITY MODAL END -->